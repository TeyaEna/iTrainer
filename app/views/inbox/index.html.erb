<body id="generic-page-style">
  <div class="row"> 
      <div class="email-list-panel">
        <table>
            <thead>
    <tr>
      <th width="70"></th>
      <th width="150">Sender</th>
      <th width="150">Subject</th>
      <th width="150">Content</th>
      <th width="150">Time</th>
    </tr>
  </thead>
  <tbody>
    <% if @messages.size > 0 %>
      <% @messages.each do |message| %>
      <tr>
        <td><%= image_tag message.sender.avatar(:small) %></td> 
        <td><%= message.sender.screen_name %></td>
        <td><%= message.subject %></td>
        <td><%= link_to("Thread", thread_path(message.id))%></td>
        <td><%= time_ago_in_words(message.created_at) %></td>
      </tr>
  </tbody>
    <% end %>
    <%= paginate @messages %>
  <% else %>
    <p> You have no messages in your inbox </p>
  <% end %>
</table>
      </div>
    </div> 
  </div> 
</body>
