<body id="generic-page-style">
  <div class="row"> 
      <div class="email-list-panel">
        <table>
          <thead>
          <tr>
            <th width="190">Sender</th>
            <th width="190">Subject</th>
            <th width="190">Content</th>
            <th width="190">Time</th>
          </tr>
          </thead>
          <tbody>
          <% if @messages.size > 0 %>
            <% @messages.each do |message| %>
            <tr>
              <td><%= message.sender.screen_name %></td>
              <td><%= message.subject %></td>
              <td><%= link_to("Conversation", conversation_path(message.id))%></td>
              <td><%= time_ago_in_words(message.created_at) %></td>
            </tr>
          </tbody>
          <% end %>
          <% else %>
          <p> You have no messages in your inbox </p>
          <% end %>
        </table>
      </div>
    </div> 
  </div> 
</body>
