<table>
  <thead>
    <tr>
      <th width="150">Sender</th>
      <th width="150">Subject</th>
      <th width="150">Message</th>
      <th width="200">Time</th>
    </tr>
  </thead>
  <tbody>
    <% if @messages.size > 0 %>
      <% @messages.each do |id, message| %>
      <tr>
        <td><%= message.first.sender.screen_name %></td>
        <td><%= message.first.subject %></td>
        <td><%= message.first.body %></td>
        <td><%= time_ago_in_words(message.first.created_at) %></td>
        <td><%= link_to("Thread", thread_path(message.first.id))%></td>
      </tr>
  </tbody>
    <% end %>
  <% else %>
    <p> You have no messages in your inbox </p>
  <% end %>
</table>
