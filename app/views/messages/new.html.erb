<%= form_for(@message) do |form| %>
  <%= form.label(:to) %>
  <% screen_name = @user.screen_name %>
  <%= form.text_field(:screen_name, value: screen_name, readonly: true ) %>
  
  <%= form.label(:subject)  %>
  <%= form.text_field(:subject) %>

  <%= form.label(:body) %>
  <%= form.text_area(:body) %>

  <%= form.submit("Send", class: "button") %>
<% end %>