<div class="user-filter">
  <%= form_tag(users_searches_path, method: 'get') do %>
    <%= label_tag :gender %>
    <%= select_tag(:gender, options_for_select([ "Male", "Female", "Other"]) ) %>
    <% params[:gender] %>
    <%= submit_tag('Filter')%>
  <% end %>
</div>

<div class="users-list">
  <ul>
    <% @users.each do |user| %>
      <li><%= user.screen_name %></li>
      <li><%= image_tag(user.avatar) %></li>
      <li><%= user.about_me %></li>
      <li><%= user.gender %></li>
      <li><%= user.address %></li>
    <% end %>
  </ul>
</div>