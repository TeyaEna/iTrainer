<body id="generic-page-style">
  <div class="row">
    <div class="large-12 columns">
      <div class="row"> 
        <div class="profile-picture">
          <div class="large-4 small-12 columns"> 
            <%= image_tag @user.avatar(:large) %>    
            <div class="panel">
              <h5><%= link_to("Send a message", new_message_path({ receiver_id: @user.id }) )%></h5>
            </div> 
          </div>
        </div>
        <div class="large-8 columns">
          <div class="row">
            <div class="profile-panel">
            <h5><strong><%= @user.screen_name %></strong></h5><br>
            <p><%= @user.about_me %></p><br>
            <p><%= @user.exercise_type %></p><br> 
            <p><%= @user.prefered_place %></p><br>
            <p><%= link_to "Back to users list", users_path %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
