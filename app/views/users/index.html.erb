<%= form_tag(users_path, method: 'post' ) do %>
  <%= label_tag :gender %>
  <%= select_tag(:gender, [ "Male", "Female", "Other"]) %>
  <% params[:gender] %>
<% end %>


<ul>
  <% @users.each do |user| %>
    <li><%= user.screen_name %></li>
    <li><%= image_tag(user.avatar) %></li>
    <li><%= user.about_me %></li>
    <li><%= user.gender %></li>
    <li><%= user.address %></li>
  <% end %>
</ul>