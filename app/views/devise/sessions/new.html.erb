<body id="sign-in">

  <div class="logo-sign-in">
    <%=image_tag("logo.png", alt: "iTrainer logo") %>
  </div>
  <div class="sign-in-title">
    <h2>Welcome to iTrainer</h2>
    <p>A platform where you can easily find a training buddy</p>
  </div>
  <div class="small-4 large-centered columns">
    <div class="row">
      <div class="signin-panel">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="signin-fields">
            <%= f.email_field :email, autofocus: true, placeholder: "email"  %>
            <%= f.password_field :password, autocomplete: "off", placeholder: "password" %>
            <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, :style => "display:inline"%>
            <% end %>
          </div>
          <%= f.submit "Sign in", class: "button" %>
        <% end %>
        <p>Don't have an account yet? <a href="#"><%= render "devise/shared/links" %> </a></p>
      </div>
    </div>
  </div>
</body>

